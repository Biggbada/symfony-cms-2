{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
 {{ dump() }}
 {% for article in articles %}
   <article>
     <h1>{{ article.title }}</h1>
       <p>{{ article.content }}</p>
       <div>
           <ul>
            {% for comment in article.comments %}
               <li> {{ comment.content }}</li>
            {% endfor %}
           </ul>
       </div>
   </article>
     <hr>
 {% endfor %}
{% endblock %}
