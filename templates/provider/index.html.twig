{% extends 'base.html.twig' %}

{% block title %}Provider index{% endblock %}

{% block body %}
    <h1>Provider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Adress1</th>
                <th>Adress2</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Email</th>
                <th>ContactFirstName</th>
                <th>ContactLastName</th>
                <th>ContactPhone</th>
                <th>ContactEmail</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provider in providers %}
            <tr>
                <td>{{ provider.id }}</td>
                <td>{{ provider.Name }}</td>
                <td>{{ provider.adress1 }}</td>
                <td>{{ provider.adress2 }}</td>
                <td>{{ provider.zipcode }}</td>
                <td>{{ provider.city }}</td>
                <td>{{ provider.country }}</td>
                <td>{{ provider.phone }}</td>
                <td>{{ provider.email }}</td>
                <td>{{ provider.contactFirstName }}</td>
                <td>{{ provider.contactLastName }}</td>
                <td>{{ provider.contactPhone }}</td>
                <td>{{ provider.contactEmail }}</td>
                <td>{{ provider.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_provider_show', {'id': provider.id}) }}">show</a>
                    <a href="{{ path('app_provider_edit', {'id': provider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_provider_new') }}">Create new</a>
{% endblock %}
