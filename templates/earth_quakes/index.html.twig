{% extends 'base.html.twig' %}

{% block title %}Hello EarthQuakesController!{% endblock %}

{% block body %}
    {% for feature in features %}
            <p>Lieu:
                    {{ feature.properties.place }}
            </p>

            <p>Date:
                    {{ feature.properties.time|date }}
            </p>

            <p>Type:
                    {{ feature.properties.type }}
            </p>

            <p>Magnitude:
                    {{ feature.properties.mag }}
            </p>

            <p>Coordonn√©es:
                    {{ feature.geometry.coordinates.0 }} / {{ feature.geometry.coordinates.1 }} /{{ feature.geometry.coordinates.2 }}
            </p>

            <p>
                    <a href="{{ feature.properties.url }}">{{ feature.properties.url }}</a>
            </p>

            <p>
                    <a href="{{ feature.properties.detail }}">{{ feature.properties.detail }}</a>
            </p>


            <hr>

    {% endfor %}


{% endblock %}
